{
    "info": {
        "name": "AI Review Management API",
        "description": "API collection for AI Review Management System with Google Sheets backend",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:4000",
            "type": "string"
        },
        {
            "key": "adminToken",
            "value": "",
            "type": "string"
        },
        {
            "key": "clientToken",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Admin Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    pm.collectionVariables.set('adminToken', response.token);",
                                    "    pm.environment.set('adminToken', response.token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"admin@reviewmgnt.com\",\n  \"password\": \"admin@2024\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "login"
                            ]
                        }
                    }
                },
                {
                    "name": "Client Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    pm.collectionVariables.set('clientToken', response.token);",
                                    "    pm.environment.set('clientToken', response.token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"client1\",\n  \"password\": \"client123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "login"
                            ]
                        }
                    }
                },
                {
                    "name": "Register Client Owner",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 201) {",
                                    "    const response = pm.response.json();",
                                    "    pm.collectionVariables.set('clientToken', response.token);",
                                    "    pm.environment.set('clientToken', response.token);",
                                    "    console.log('Client registered successfully!');",
                                    "    console.log('Tenant ID:', response.tenant.id);",
                                    "    console.log('Next step:', response.nextStep);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"owner@example.com\",\n    \"password\": \"password123\",\n    \"firstName\": \"John\",\n    \"lastName\": \"Doe\",\n    \"businessName\": \"My Coffee Shop\",\n    \"slug\": \"my-coffee-shop\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/register/client",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "register",
                                "client"
                            ]
                        },
                        "description": "Register a new CLIENT_OWNER account. Returns token and indicates Google Business connection is required."
                    }
                },
                {
                    "name": "Verify Token",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{adminToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/verify",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "verify"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Admin",
            "item": [
                {
                    "name": "Get Admin Dashboard",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{adminToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/admin/dashboard",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "admin",
                                "dashboard"
                            ]
                        }
                    }
                },
                {
                    "name": "Get All Clients",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{adminToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/admin/clients",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "admin",
                                "clients"
                            ]
                        }
                    }
                },
                {
                    "name": "Get All Reviews (Admin Inbox)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{adminToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/admin/reviews",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "admin",
                                "reviews"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Client",
            "item": [
                {
                    "name": "Get Client Dashboard",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{clientToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/client/dashboard",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "client",
                                "dashboard"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Client Reviews",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{clientToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/client/reviews",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "client",
                                "reviews"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Reviews",
            "item": [
                {
                    "name": "Get Single Review (Admin)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{adminToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/reviews/REV001?slug=client1",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "reviews",
                                "REV001"
                            ],
                            "query": [
                                {
                                    "key": "slug",
                                    "value": "client1"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Single Review (Client)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{clientToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/reviews/REV001",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "reviews",
                                "REV001"
                            ]
                        }
                    }
                },
                {
                    "name": "Update Review (Admin)",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{adminToken}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"slug\": \"client1\",\n  \"editedReply\": \"Thank you for your wonderful feedback! We appreciate your business.\",\n  \"approvalStatus\": \"Approved\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/reviews/REV001",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "reviews",
                                "REV001"
                            ]
                        }
                    }
                },
                {
                    "name": "Update Review (Client)",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{clientToken}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"editedReply\": \"Thank you for your feedback!\",\n  \"approvalStatus\": \"Approved\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/reviews/REV001",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "reviews",
                                "REV001"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Google OAuth",
            "item": [
                {
                    "name": "Get OAuth Connect URL",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    console.log('OAuth URL:', response.authUrl);",
                                    "    console.log('Copy the URL above and open it in your browser');",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{clientToken}}",
                                "description": "CLIENT_OWNER token"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/google-oauth/connect",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "google-oauth",
                                "connect"
                            ]
                        },
                        "description": "Get Google OAuth authorization URL. Copy the returned URL and open in browser to authorize."
                    }
                },
                {
                    "name": "Get Connection Status",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{clientToken}}",
                                "description": "CLIENT_OWNER token"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/google-oauth/status",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "google-oauth",
                                "status"
                            ]
                        },
                        "description": "Check if Google Business account is connected and view connection details."
                    }
                },
                {
                    "name": "OAuth Callback (Manual Test)",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/google-oauth/callback?code=YOUR_CODE_HERE&state=YOUR_TENANT_ID_HERE",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "google-oauth",
                                "callback"
                            ],
                            "query": [
                                {
                                    "key": "code",
                                    "value": "YOUR_CODE_HERE",
                                    "description": "Authorization code from Google"
                                },
                                {
                                    "key": "state",
                                    "value": "YOUR_TENANT_ID_HERE",
                                    "description": "Tenant ID"
                                }
                            ]
                        },
                        "description": "This endpoint is normally called by Google redirect. For manual testing, replace the code and state values."
                    }
                },
                {
                    "name": "Disconnect Google Account",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{clientToken}}",
                                "description": "CLIENT_OWNER token"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/google-oauth/disconnect",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "google-oauth",
                                "disconnect"
                            ]
                        },
                        "description": "Disconnect the Google Business account and remove stored OAuth tokens."
                    }
                }
            ]
        },
        {
            "name": "Health Check",
            "request": {
                "method": "GET",
                "url": {
                    "raw": "{{baseUrl}}/",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        ""
                    ]
                }
            }
        }
    ]
}